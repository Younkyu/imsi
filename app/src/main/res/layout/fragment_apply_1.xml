<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="goriproject.ykjw.com.myapplication.Apply_1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/apply1_batang"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <ImageView
            android:id="@+id/img_apply1_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply1_batang"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_place_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:text="장소 확인"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply1_batang"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="29dp"
            android:text="첫수업만 결제"
            android:textColor="#b6b6b6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply1_batang"
            app:layout_constraintRight_toRightOf="@+id/apply1_batang"
            android:layout_marginEnd="29dp" />

        <TextView
            android:id="@+id/tv_docuwrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="신청서 작성"
            android:textColor="#b6b6b6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply1_batang"
            app:layout_constraintLeft_toRightOf="@+id/tv_place_confirm"
            app:layout_constraintRight_toLeftOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bubble"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="수업장소와 가능한 시간을\n한번 더 확인해주세요."
            app:layout_constraintBottom_toBottomOf="@+id/img_apply1_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_apply1_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_apply1_profile"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp" />

        <View
            android:id="@+id/apply1_sepa_bottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#b6b6b6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.0"></View>

        <View
            android:id="@+id/apply1_sepa_bottom2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#b6b6b6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/li"></View>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치\n확인"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/apply1_sepa_bottom"
            app:layout_constraintRight_toRightOf="@+id/img_apply1_profile"
            app:layout_constraintLeft_toLeftOf="@+id/img_apply1_profile" />

        <LinearLayout
            android:id="@+id/li"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:minHeight="60dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"
            app:layout_constraintRight_toRightOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="신촌"
                    android:textColor="@drawable/text_color_selector" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="강남"
                    android:textColor="@drawable/text_color_selector" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="사당"
                    android:textColor="@drawable/text_color_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="잠실"
                    android:textColor="@drawable/text_color_selector" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="종로"
                    android:textColor="@drawable/text_color_selector" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="혜화"
                    android:textColor="@drawable/text_color_selector" />

            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
